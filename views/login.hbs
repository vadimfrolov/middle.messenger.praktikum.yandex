<div class="profile-page-container">
    <div class="profile-page-content login-wrap">
        <span class="login-title">Вход</span>
        {{! <form> }}
        <input
            type="text"
            placeholder="логин"
            name="login-enter"
            id="login"
            class="login-input"
        />
        <input
            type="password"
            placeholder="пароль"
            name="password-enter"
            class="login-input"
        />
        <button class="login-button login-button-margin"><a href="/chat">Авторизоваться</a></button>
        <button class="register-button"><a href="/signup">Нет аккаунта?</a></button>
        {{! </form> }}
    </div>
</div>